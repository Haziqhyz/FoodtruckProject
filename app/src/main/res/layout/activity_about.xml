                android:text="20231116297"
                android:textSize="16sp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RCDCS2405B"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Member 3 -->
            <ImageView
