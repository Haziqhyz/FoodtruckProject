<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Food Truck"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Truck Type -->
        <EditText
            android:id="@+id/edtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Truck Type (e.g., Burger, Mee Goreng)"
            android:inputType="text"/>

        <!-- Latitude -->
        <EditText
            android:id="@+id/edtLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"/>

        <!-- Longitude -->
        <EditText
            android:id="@+id/edtLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"/>

        <!-- Reported By -->
        <EditText
            android:id="@+id/edtReporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reported By"
            android:inputType="textPersonName"
            android:layout_marginTop="12dp"/>

        <!-- Last Reported Time -->
        <EditText
            android:id="@+id/edtLastReported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Reported (e.g., 2025-07-15 14:00)"
            android:inputType="text"
            android:layout_marginTop="12dp"/>

        <!-- Save Truck Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Truck"
            android:layout_marginTop="24dp"/>

        <!-- âœ… Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
